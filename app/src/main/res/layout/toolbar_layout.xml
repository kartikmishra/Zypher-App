<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relLayout1"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/menu"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#zypher"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_toRightOf="@+id/menu"/>



        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/search"
            android:src="@drawable/ic_search"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/notification"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/notification"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_notifications"
            android:layout_toLeftOf="@id/turned"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/turned"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_turned"
            android:layout_toLeftOf="@id/shopping"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/shopping"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_shopping_basket_black_24dp"
            android:layout_toLeftOf="@id/profileImage"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/profileImage"
            android:layout_marginRight="15dp"
            android:src="@drawable/selena"
            android:scaleType="centerCrop"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/relLayout1"
        android:layout_height="1dp"
        android:background="#000"/>

</RelativeLayout>